
<launch>
    <!--
  -->
  <arg name="model" default="$(find sevenbot-ros)/urdf/sevenbot.urdf" />
  <arg name="gui" default="false" />
  <param name="robot_description" textfile="$(arg model)" />
  <param name="use_gui" value="$(arg gui)"/>
  <!-- Mapper node. -->
  <node name="serial_node"
        pkg="rosserial_arduino"
        type="serial_node.py"
        output="screen">

    <param name="port" value="/dev/ttyACM0" />
  </node>


  <!--
  <node name = "control_node"
    pkg="sevenbot-ros"
    type="controller.py"
    output = "screen">
  </node>
-->

  <!--
-->
  <node name = "joint_state_converter"
    pkg="sevenbot-ros"
    type="joint_state_converter.py">
  </node>

<!--
  <node name="rviz" pkg="rviz"
        type="rviz"
        args="-d $(find sevenbot-ros)/urdf.rviz" required="true" />
      -->
      <!-- publish the state from JointState -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub" >
      <remap from="joint_states" to="sevenbot/joint_states" />
      <param name="publish_frequency" value="50.0"/>
  </node>

</launch>
